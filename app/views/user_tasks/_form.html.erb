<div id="form">

  <%= simple_form_for(@user_task, remote: true) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :description, label: 'thing you gotta do', as: :text, placeholder: "make groceries" %>
      <%= f.input :due, label: 'when you gotta do it', as: :string, placeholder: "today" %>
    </div>

    <div class="form-actions">
      <%= f.submit 'save', class: 'btn btn-sm btn-default' %>
    </div>

  <% end %>

</div>